<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytodoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mytodoapp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PageDetailActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_detail_activity_title"/>

        <activity
            android:name=".PageNewActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/page_new_activity_title"/>

        <activity
            android:name=".PageEditActivity"
            android:parentActivityName=".PageDetailActivity"
            android:label="@string/page_edit_activity_title"/>

    </application>

</manifest>